// Import Vuetify styling
@require '~vuetify/src/stylus/main.styl'

body, p, div, span
  font: 18pt 'Roboto Condensed', sans-serif
  line-height: 1.5
  font-weight: 300

h1, h2, h3, h4, h5
  font-family: 'Bree Serif', serif

h1, h2
  letter-spacing: 0.3em
  text-transform: uppercase !important
  line-height: 1.25
  font-weight: 700

h3, h4, h5
  letter-spacing: 0.05em
  line-height: 1.25
  font-weight: 700

h1
  font-size: 180%

h2
  font-size: 165%

h3
  font-size: 140%

h4
  font-size: 135%

h5
  font-size: 130%

.bigger
  font-size: 125%
